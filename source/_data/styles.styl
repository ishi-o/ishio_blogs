.category-all-page .category-list {
    font-size: 1.2em;
}

.highlight .code-lang {
    font-size: 1em;
    line-height: 1;
    
    top: 8px;
    right: 8px;
    position: absolute;
    
    font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
    opacity: 0.5;
    pointer-events: auto;
    
    color: inherit;
    background-color: transparent;
    padding: 0;
    margin: 0;
    z-index: 1;
}

.sidebar .sidebar-post-related {
    display: none;
}

.post-body ul li p {
    margin-top: 0.4em;
    margin-bottom: 0.4em;
    line-height: 1.8;
}

.post-body ul,
.post-body ol {
    font-size: 1.05em;
}

